#content {
  form {
    > table {
      width: 100%;
      max-width: 100%;
      margin-bottom: 20px;
      border-spacing: 0;
      border-collapse: collapse;

      tr {
        display: table-row;

        > th {
          padding: 0 0 16px 0;
        }
        > td {
          padding: 0 0 16px 0;
          vertical-align: top;

          > input {
            width: 100%;
          }
        }
      }
    }
  }
}
